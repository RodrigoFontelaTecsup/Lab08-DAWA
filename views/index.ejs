<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CRUD de Usuarios</title>
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet"
    />
  </head>
  <body class="bg-gray-100">
    <div class="container mx-auto p-4">
      <h1 class="text-3xl font-semibold mb-4">Usuarios</h1>

      <!-- Formulario para agregar un usuario -->
      <form action="/users" method="POST" class="mb-6">
        <div class="mb-4">
          <label for="name" class="block text-gray-700">Nombre:</label>
          <input type="text" id="name" name="name" class="form-input w-full" />
        </div>
        <div class="mb-4">
          <label for="email" class="block text-gray-700">Email:</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-input w-full"
          />
        </div>
        <div class="mb-4">
          <label for="password" class="block text-gray-700">Contrase√±a:</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-input w-full"
          />
        </div>
        <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded">
          Crear Usuario
        </button>
      </form>

      <!-- Mensajes de error -->
      <% if (typeof validationErrors != 'undefined') { %>
      <div
        class="bg-red-100 border border-red-400 text-red-700 px-4 py-2 mb-4 rounded"
      >
        <strong>Error:</strong>
        <ul class="list-disc list-inside">
          <% validationErrors.forEach((error) => { %>
          <li><%= error %></li>
          <% }) %>
        </ul>
      </div>
      <% } %>

      <!-- Lista de Usuarios -->
      <h2 class="text-xl font-semibold mb-4">Lista de Usuarios</h2>
      <ul>
        <% users.forEach((user) => { %>
        <li class="mb-2">
          <span><%= user.name %> (<%= user.email %>)</span>
          <a href="/users/edit/<%= user._id %>" class="text-blue-500 ml-2"
            >Editar</a
          >
          <a href="/users/delete/<%= user._id %>" class="text-red-500 ml-2"
            >Eliminar</a
          >
        </li>
        <% }) %>
      </ul>
    </div>
  </body>
</html>
